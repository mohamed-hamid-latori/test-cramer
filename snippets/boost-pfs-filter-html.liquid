{%- capture bc_layout -%}
	{%- case layout -%}
	{%- when 'productGridItemHtml' -%}
		{%- raw -%}
		<div class="collection__product" style="order: [[itemIndex]];" data-collection-product="[[productId]]">
			<div class="product-card">
				<div class="product-card__media">
					{{productImages}}

					{{productBadges}}

					{{productOptions}}
				</div>

				<div class="product-card__meta">
					{{productMeta}}
				</div>
			</div>
		</div>
		{%- endraw -%}

	{%- when 'soldOutLabelHtml' -%}
		<span class="badge badge--bottom-left color-[[soldOutBadgeClass]]"
			  aria-hidden="true">{{ 'products.product.sold_out' | t }}</span>

	{%- when 'saleLabelHtml' -%}
		<span class="badge badge--bottom-left color-[[saleBadgeClass]]"
			  aria-hidden="true">{{ 'products.product.on_sale' | t }}</span>

	{%- when 'vendorHtml' -%}
		<p class="product-card__vendor">
			[[productVendor]]
		</p>

	{%- when 'wishlistHtml' -%}
		<button
			class="swym-button swym-add-to-wishlist-view-product product_[[productId]] button button--wishlist product-card__actions"
			data-swaction="addToWishlist"
			data-product-id="[[productId]]"
			data-variant-id="[[variantId]]"
			data-product-url="{{ shop.url }}/products/[[productHandle]]"
			data-add-to-wishlist
		></button>

	{%- when 'badgeOfflineOnlyHtml' -%}
		<div class="badge badge--offline-only product-card__badge">
			{{- 'products.product.badges.offline_only' | t -}}
		</div>

	{%- when 'badgeSaleHtml' -%}
		<div class="badge badge--sale product-card__badge">
			{{- 'products.product.badges.sale' | t -}}
		</div>

	{%- when 'badgeSustainabilityHtml' -%}
		<div class="badge badge--sustainability">
			{{- 'products.product.badges.sustainability' | t -}}
		</div>

	{%- when 'badgeNewHtml' -%}
		<div class="badge badge--new product-card__badge">
			{{- 'products.product.badges.new' | t -}}
		</div>

	{%- when 'badgeBestsellerHtml' -%}
		<div class="badge badge--bestseller product-card__badge">
			{{- 'products.product.badges.bestseller' | t -}}
		</div>

	{%- when 'badgeBioCottonHtml' -%}
		<div class="badge badge--icon product-card__badge product-card__badge--sustainable">
			{%- render 'icon-bio-cotton' -%}
		</div>

	{%- when 'badgeEcoFriendlyHtml' -%}
		<div class="badge badge--icon product-card__badge product-card__badge--sustainable">
			{%- render 'icon-eco-friendly' -%}
		</div>

	{%- when 'badgeVeganHtml' -%}
		<div class="badge badge--icon product-card__badge product-card__badge--sustainable">
			{%- render 'icon-vegan' -%}
		</div>

	{%- when 'previousActiveHtml' -%}
		<li>
			<a href="[[itemUrl]]"
			   class="pagination__item pagination__item--next pagination__item-arrow link motion-reduce">
				<svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret"
					 viewBox="0 0 10 6">
					<path fill-rule="evenodd" clip-rule="evenodd"
						  d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z"
						  fill="currentColor">
					</path>
				</svg>
			</a>
		</li>

	{%- when 'nextActiveHtml' -%}
		<li>
			<a href="[[itemUrl]]"
			   class="pagination__item pagination__item--prev pagination__item-arrow link motion-reduce">
				<svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret"
					 viewBox="0 0 10 6">
					<path fill-rule="evenodd" clip-rule="evenodd"
						  d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z"
						  fill="currentColor">
					</path>
				</svg>
			</a>
		</li>

	{%- when 'pageItemHtml' -%}
		<li><a href="[[itemUrl]]" class="pagination__item link">[[itemTitle]]</a></li>

	{%- when 'pageItemSelectedHtml' -%}
		<li><span class="pagination__item pagination__item--current" aria-current="page">[[itemTitle]]</span></li>

	{% when 'pageItemRemainHtml' %}
		<li><span class="pagination__item">[[itemTitle]]</span></li>

	{%- when 'paginateHtml' -%}
		<div class="pagination-wrapper">
			<nav class="pagination" role="navigation" aria-label="Pagination">
				<ul class="pagination__list list-unstyled" role="list">[[previous]][[pageItems]][[next]]</ul>
			</nav>
		</div>

	{%- when 'sortingHtml' -%}
		<div class="boost-pfs-filter-top-sorting-dropdown-trigger collection-sort">
			<button
				class="boost-pfs-filter-top-sorting-dropdown-button collection-sort__value collection-sort__button"></button>

			<ul class="boost-pfs-filter-top-sorting-dropdown collection-sort__dropdown">
				[[sortingItems]]
			</ul>
		</div>

	{%- when 'collectionBannerHtml' -%}

		<div class="collection__banner js-collection-banner"
			 style="order: [[index]];"
			 data-banner-width="[[size]]"
			 data-collection-banner
		>
			<div class="collection-banner">
				<div class="collection-banner__media">
					<div class="collection-banner__media-item collection-banner__image-wrapper js-banner-image"
						 data-banner-image>
						<picture>

							<img src="[[bannerImage]]" srcset="[[bannerImage]]" alt="[[index]]"
								 class="collection-banner__image">
						</picture>
					</div>
					<div class="collection-banner__media-item collection-banner__video js-banner-video"
						 data-banner-video>
						<video class="collection-banner__video-player" data-player>
							<source src="[[bannerVideo]]" type="video/mp4">
							<source src="[[bannerVideo]]" type="video/ogg">
						</video>
						<div class="collection-banner__video-controls" data-video-control>
							<button class="collection-banner__video-button js-player-button" data-player-button>
								{% render 'icon-play-filled' %}
								{% render 'icon-pause' %}
							</button>
						</div>
					</div>
				</div>
				<div class="collection-banner__content" data-position="[[bannerContentPosition]]" data-banner-content>
					<div class="collection-banner__content-inner">
						<a href="[[bannerLink]]" class="collection-banner__link"><h4 class="collection-banner__title"
																					 style="color: [[bannerTitleColor]]">
								[[bannerTitle]]</h4></a>
						<div class="collection-banner__text" style="color: [[bannerTextColor]]">[[bannerText]]</div>
					</div>
				</div>
			</div>
		</div>
	{%- endcase -%}
{%- endcapture -%}

{%- assign str = '}}' -%}
{{- bc_layout | json | replace: '[[', '{{' | replace: ']]', str -}}
