{%- capture add_form -%}
	<div data-customer-addresses>
		<div data-address>
			{% form 'customer_address', customer.new_address %}
				<div class="form__row account-add-addresses__form-row">
					<div class="form__col account-add-addresses__form-col">
						<div class="input-group input-group--floating-label form__input-group">
							<input type="text" id="AddressFirstNameNew" class="input input-group__input form__input" name="address[first_name]" value="{{form.first_name}}" autocapitalize="words" placeholder="{{ 'customer.addresses.first_name' | t }}">
							
							<label for="AddressFirstNameNew" class="input-group__label">{{ 'customer.addresses.first_name' | t }}</label>
						</div>
					</div>

					<div class="form__col account-add-addresses__form-col">
						<div class="input-group input-group--floating-label form__input-group">
							<input type="text" id="AddressLastNameNew" class="input input-group__input form__input" name="address[last_name]" value="{{form.last_name}}" autocapitalize="words" placeholder="{{ 'customer.addresses.last_name' | t }}">
							
							<label for="AddressLastNameNew" class="input-group__label">{{ 'customer.addresses.last_name' | t }}</label>
						</div>
					</div>
				</div>

				<div class="form__row account-add-addresses__form-row">
					<div class="form__col account-add-addresses__form-col">
						<div class="input-group input-group--floating-label form__input-group">
							<input type="text" id="AddressCompanyNew" class="input input-group__input form__input" name="address[company]" value="{{form.company}}" autocapitalize="words" placeholder="{{ 'customer.addresses.company' | t }}">
						
							<label for="AddressCompanyNew" class="input-group__label">{{ 'customer.addresses.company' | t }}</label>
						</div>
					</div>

					<div class="form__col account-add-addresses__form-col">
						<div class="input-group input-group--floating-label form__input-group">
							<input type="text" id="AddressAddress1New" class="input input-group__input form__input" name="address[address1]" value="{{form.address1}}" autocapitalize="words" placeholder="{{ 'customer.addresses.address1' | t }}"> 
						
							<label for="AddressAddress1New" class="input-group__label">{{ 'customer.addresses.address1' | t }}</label>
						</div>
					</div>
				</div>

				<div class="form__row account-add-addresses__form-row">
					<div class="form__col account-add-addresses__form-col">
						<div class="input-group input-group--floating-label form__input-group">
							<input type="text" id="AddressAddress2New" class="input input-group__input form__input" name="address[address2]" value="{{form.address2}}" autocapitalize="words" placeholder="{{ 'customer.addresses.address2' | t }}">
						
							<label for="AddressAddress2New" class="input-group__label">{{ 'customer.addresses.address2' | t }}</label>
						</div>
					</div>
					
					<div class="form__col account-add-addresses__form-col">
						<div class="input-group input-group--floating-label form__input-group">
							<input type="text" id="AddressCityNew" class="input input-group__input form__input" name="address[city]" value="{{form.city}}" autocapitalize="words" placeholder="{{ 'customer.addresses.city' | t }}">
						
							<label for="AddressCityNew" class="input-group__label">{{ 'customer.addresses.city' | t }}</label>
						</div>
					</div>
				</div>

				<div class="form__row account-add-addresses__form-row">
					<div id="AddressProvinceContainerNew"  
						class="form__col account-add-addresses__form-col"
						style="display:none;" 
					>
						<div class="input-group input-group--floating-label form__input-group">
							<select
								id="AddressProvinceNew"
								name="address[province]"
								data-default="{{ form.province }}"
								autocomplete="address-level1"
								class="input input-group__input form__input js-arrow-trigger"
							>
							</select>

							<label for="AddressProvinceNew" class="input-group__label">{{ 'customer.addresses.province' | t }}</label>

							<span class="account-add-addresses__arrow"></span>
						</div>
					</div>

					<div class="form__col account-add-addresses__form-col">
						<div class="input-group input-group--floating-label form__input-group">
							<input type="text" id="AddressZipNew" class="input input-group__input form__input" name="address[zip]" value="{{form.zip}}" autocapitalize="characters" placeholder="{{ 'customer.addresses.zip' | t }}">
						
							<label for="AddressZipNew" class="input-group__label">{{ 'customer.addresses.zip' | t }}</label>
						</div>
					</div>
				</div>

				<div class="form__row account-add-addresses__form-row">
					<div class="form__col account-add-addresses__form-col">
						<div class="custom-select custom-select--floating-label">
							<label for="AddressCountryNew" class="custom-select__label account-add-addresses__custom-select-label">{{ 'customer.addresses.country' | t }}</label>
							
							<select id="AddressCountryNew" 
								class="input input-group__input form__input js-arrow-trigger" 
								name="address[country]" 
								data-default="{{form.country}}"
								
							>
								{{ all_country_option_tags }}
							</select>

							<span class="account-add-addresses__arrow"></span>
						</div>
					</div>

					<div class="form__col account-add-addresses__form-col">
						<div class="input-group input-group--floating-label form__input-group">
							<input type="tel" id="AddressPhoneNew" class="input input-group__input form__input" name="address[phone]" value="{{form.phone}}" placeholder="{{ 'customer.addresses.phone' | t }}">
						
							<label for="AddressPhoneNew" class="input-group__label">{{ 'customer.addresses.phone' | t }}</label>
						</div>
					</div>
				</div>

				<div class="account-add-addresses__form-checkbox-container">
					{{ form.set_as_default_checkbox }}

					<label for="address_default_address_new" class="inline">{{ 'customer.addresses.set_default' | t }}</label>
				</div>

				<div class="account-add-addresses__submit-button-container">
					<input type="submit" class="button button--primary button--regular account-add-addresses__submit-button" value="{{ 'customer.addresses.add' | t }}">
					<input type="hidden" name="return_to" value="/account/addresses">
				</div>
			{% endform %}
		</div>
	</div>
{%- endcapture -%}

<section class="account-content account-add-addresses">
	<div class="account-content__container">
		<div class="account-content__header">
            <div class="account-content__back-link-container">
                <a href="/account/addresses"
                    class="account-content__back-link"                
                    onclick="Shopify.CustomerAddress.toggleNewForm(); return false;"
                >
                    <div class="account-content__back-link-icon">
                        {% render 'icon-search-enter' %}
                    </div>
                                
                    {{ 'customer.account.addresses.back' | t }}
                </a>
            </div>

			<div class="account-content__header-wrapper">
				<h1 class="account-content__header-title">
					{{ 'customer.addresses.add_new' | t }}
				</h1>

				<div class="account-content__header-icon">
					{%- render 'icon-account-triangle' -%}
				</div>
			</div>

            <div id="AddAddress" class="account-content-addresses__form-wrapper">
				{{- add_form -}}
			</div>
        </div>
	</div>
</section>