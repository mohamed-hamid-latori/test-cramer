{%- capture footer_social_icons -%}
	{%- assign social_twitter_link = settings.social_twitter_link -%}
	{%- if social_twitter_link != blank -%}
		<div class="footer-social-icons__column">
			<a
				href="{{- social_twitter_link -}}"
				class="footer-social-icons__link"
				aria-describedby="a11y-external-message"
				target="_blank"
			>
				{%- render 'icon-twitter' -%}

				<span class="visually-hidden">
					{{- 'general.social.links.twitter' | t -}}
				</span>
			</a>
		</div>
	{%- endif -%}

