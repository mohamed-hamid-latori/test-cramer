{%- assign heading          = section.settings.heading -%}

<section class="career-vacancy-mail"
    data-section-id="{{- section.id -}}"
    data-section-type="career-vacancy-mail"
>
    
    <div class="container career-vacancy-mail__container">
        {%- if heading != blank -%}
            <h1 class="career-vacancy-mail__heading">
                {{- heading -}}
            </h1>
        {%- endif -%}

        <div class="career-vacancy-mail__form-wrapper">
            {formbuilder:NjIzNDI=}
        </div>    
    </div>
</section>

{% schema %}
    {
        "name": "Career Vacancy mail",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Apply now"
            }
        ]
    }
{% endschema %}
