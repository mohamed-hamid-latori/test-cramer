        "id": "autoplay_speed",
        "min": 1,
        "max": 10,
        "step": 1,
        "unit": "s",
        "label": "Autoplay Speed",
        "default": 3
      },
	  {
        "type": "header",
        "content": "Style"
      },
	  {
        "type": "range",
        "id": "slideshow_width_desktop",
        "min": 10,
        "max": 100,
        "step": 10,
        "unit": "%",
        "label": "Slideshow Desktop Width",
        "default": 100
