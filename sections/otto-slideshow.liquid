      {
        "type": "range",
        "id": "slideshow_width_mobile",
        "min": 10,
        "max": 100,
        "step": 10,
        "unit": "%",
        "label": "Slideshow Mobile Width",
        "default": 100
      },
	  {
        "type": "number",
        "id": "slideshow_margin_top",
        "label": "Margin Top (px)",
        "default": 0
      },
      {
        "type": "number",
        "id": "slideshow_margin_bottom",
        "label": "Margin Bottom (px)",
        "default": 20
      },
	  {
        "type": "header",
        "content": "Navigation"
      },
	  {
        "type": "checkbox",
        "id": "show_arrow_nav",
        "label": "Show Arrow Nav",
        "default": true
      },
	  {
        "type": "color",
        "id": "arrow_navigation_color",
        "label": "Arrow Navigation Color",
        "default": "#000000"
      },
	  {
        "type": "checkbox",
        "id": "show_dot_nav",
        "label": "Show Dot Nav",
        "default": true
      },
	  {
        "type": "color",
        "id": "dot_navigation_color",
        "label": "Dot Navigation Color",
        "default": "#000000"
      }
    ],
    "blocks" : [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "text",
            "id": "image_name",
            "label": "Image Name",
			      "info": "The image name is the name provided in the Otto app. Once entered then Otto will automatically pull the scheduled image and content."
          },
          {
            "type": "header",
            "content": "Content"
          },
          {
            "type": "paragraph",
            "content": "All content is added directly in the Otto app. If a specific piece of content isn't set on a scheduled image then it won't display."
          },
          {
            "type": "checkbox",
            "id": "show_content",
            "label": "Show Content",
            "default": false
          },
          {
            "type": "range",
            "id": "content_width",
            "min": 10,
            "max": 100,
            "step": 10,
            "unit": "%",
            "label": "Content Width",
            "default": 60
